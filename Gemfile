# Makes http fun! Also, makes consuming restful web services dead easy. (http://jnunemaker.github.com/httparty)
gem 'httparty'
# Rake is a Make-like program implemented in Ruby. (https://rubygems.org/gems/rake)
gem 'rake'

group :test do
  # Library for stubbing and setting expectations on HTTP requests in Ruby. (https://github.com/bblimke/webmock)
  gem 'webmock'
  # Byebug is a simple to use and feature rich debugger for Ruby. (https://github.com/deivid-rodriguez/byebug)
  gem 'byebug'
  # minitest provides a complete suite of testing facilities supporting TDD, BDD, mocking, and benchmarking. (https://github.com/seattlerb/minitest)
  gem 'minitest', '~> 5.8', '>= 5.8.4'
end
